@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@ViewData["Title"] - Farm Management System</title>

    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />

    <!-- Fonts and icons -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;600&display=swap">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">

    <link rel="shortcut icon" type="image/png" href="~/img/icons8-maple-leaf-96.png" />

    <!-- Material Dashboard CSS -->
    <link href="~/lib/material-dashboard/assets/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body class="off-canvas-sidebar">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top text-white">
        <div class="container">
            <div class="navbar-wrapper">
                <a class="navbar-brand" href="javascript:;">Farm Management System</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a asp-controller="Account" asp-action="Register" class="nav-link">
                            <i class="material-icons">person_add</i>
                            Register
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="wrapper wrapper-full-page">
        <div class="page-header login-page header-filter" filter-color="black">

            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
                        <form class="form" asp-controller="Account" asp-action="Login" method="post">
                            <div class="card card-login">
                                <div class="card-header card-header-success text-center">
                                    <div class="card-title">Myanmar Golden Agri Pte. Ltd</div>
                                </div>
                                <div class="card-body ">
                                    <span class="bmd-form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">mail_outline</i>
                                                </span>
                                            </div>
                                            <input asp-for="UserName" class="form-control" placeholder="User Name...">
                                        </div>

                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </span>
                                    <span class="bmd-form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                            </div>
                                            <input asp-for="Password" class="form-control" placeholder="Password...">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </span>
                                </div>
                                <div class="card-footer justify-content-center">
                                    <button type="submit" class="btn btn-fill btn-info">Log in</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container">
                    <b>Copyright </b> &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script>
                    Myanmar Golden Agri Pte. Ltd. All rights reserved.
                </div>
            </footer>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/lib/material-dashboard/assets/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/material-dashboard/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/lib/material-dashboard/assets/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>

    <!-- Plugin for the Perfect Scrollbar -->
    <script src="~/lib/material-dashboard/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!-- Forms Validations Plugin -->
    <script src="~/lib/material-dashboard/assets/js/plugins/jquery.validate.min.js"></script>

    <!-- Library for adding dinamically elements -->
    <script src="~/lib/material-dashboard/assets/js/plugins/arrive.min.js"></script>

    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/lib/material-dashboard/assets/js/material-dashboard.js?v=2.1.2" type="text/javascript"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>