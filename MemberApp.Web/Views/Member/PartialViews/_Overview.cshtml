@model MemberOverviewViewModel

@{
    ViewData["MemberId"] = Model.Id;
}

<div class="card ">
    <div class="card-header card-header-success card-header-icon">
        <div class="card-icon">
            <i class="material-icons">perm_identity</i>
        </div>
        <h4 class="card-title">Overview</h4>>
    </div>
    <div class="card-body ">
        <table class="member-details-table table table-no-bordered dtr-inline" cellspacing="0" width="100%" style="width: 100%;" role="grid" aria-describedby="datatables_info">
            <tbody>
                <tr role="row">
                    <td>FullName</td>
                    <td>@Model.FullName</td>
                </tr>
                <tr role="row">
                    <td>BC</td>
                    <td>@Model.BCNumber</td>
                </tr>
                <tr role="row">
                    <td>Phone Number</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
               @* <tr role="row">
                    <td>Current City</td>
                    <td>@Model.CurrentCity</td>
                </tr>
                <tr role="row">
                    <td>Locking Status</td>
                    <td>@(Model.IsLocked ? "Locked": "Unlocked")</td>
                </tr>
                <tr role="row">
                    <td>Registeration Status</td>
                    <td>@(Model.IsConfirmedByAdmin ? "Confirmed" : "Unconfirm")</td>
                </tr>*@
            </tbody>
        </table>
        <div class="row">
            @*<div class="col-md-12">
                @if(Model.IsConfirmedByAdmin)
                {
                    if(Model.IsLocked)
                    {
                        <button type="button" class="btn btn-fill btn-success pull-right" data-toggle="modal" data-target="#unlockMemberModal">
                            Unlock
                            <i class="material-icons">lock_open</i>
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-fill btn-danger pull-right" data-toggle="modal" data-target="#lockMemberModal">
                            Lock
                            <i class="material-icons">lock</i>
                        </button>
                    }
                }
                else
                {
                    <button type="button" class="btn btn-fill btn-success pull-right" data-toggle="modal" data-target="#confirmMemberModal">
                        Confirm
                        <i class="material-icons">verified_user</i>
                    </button>
                }
            </div>*@
        </div>
    </div>
</div>

<div class="modal fade" id="confirmMemberModal" tabindex="-1" role="dialog" aria-labelledby="confirmMemberModalLabel" aria-hidden="true">
    <form asp-controller="Member" asp-action="Confirm" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationDeleteModalLabel">Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="modal-message">Are you sure you want confirm this member?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-success">Yes</button>
                </div>
            </div>
        </div>
    </form>
</div>

