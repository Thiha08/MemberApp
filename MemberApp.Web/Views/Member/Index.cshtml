@inject IViewLocalizer Localizer

@model IEnumerable<MemberOverviewViewModel>

@{
    ViewData["Title"] = "Members";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-success card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">groups</i>
                    </div>
                    <h4 class="card-title">@Localizer["Members"]</h4>
                </div>
                <div class="card-body">
                    <div class="toolbar text-right">
                        <a class="btn btn-success btn-create" asp-controller="Member" asp-action="Create">
                            ADD
                            <i class="material-icons">keyboard_arrow_right</i>
                        </a>
                    </div>
                    <div class="material-datatables">
                        <div id="datatables_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="crop-production-table" class="crop-production-table table table-striped table-no-bordered" cellspacing="0" width="100%" style="width: 100%;" role="grid" aria-describedby="datatables_info">
                                        <thead>
                                            <tr role="row">
                                                <th>
                                                    @Localizer["Id"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["BCNumber"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["Rank"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["FullName"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["CurrentStatus"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["Division"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["PhoneNumber"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["Request"]
                                                    <i class="material-icons arrow_drop_up">arrow_drop_up</i>
                                                    <i class="material-icons arrow_drop_down">arrow_drop_down</i>
                                                </th>
                                                <th>
                                                    @Localizer["Details"]
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Any())
                                            {
                                                int index = 0;
                                                foreach (var item in Model)
                                                {
                                                    index++;
                                                    <tr role="row" data-cropproductionid="@item.Id" style="">
                                                        <td>
                                                            @index
                                                        </td>
                                                        <td tabindex="0" class="sorting_1">
                                                            @Html.DisplayFor(modelItem => item.BCNumber)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Rank)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FullName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.CurrentStatus)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Division)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Request)
                                                        </td>
                                                        <td class="td-actions text-center">
                                                            <a asp-action="Manage" asp-route-id="@item.Id"
                                                       class="btn btn-link btn-success btn-just-icon edit">
                                                                <i class="material-icons">manage_accounts</i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr role="row">
                                                    <td colspan="8" class="text-center">
                                                        No data found.
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
    </div>
</div>

@section Scripts
{
<script>

    $(function () {

        $('#crop-production-table').DataTable({
            language: { search: "", searchPlaceholder: "Search..." },
            "columns": [
                { "width": "5%" },
                { "width": "15%" },
                { "width": "10%" },
                { "width": "18%" },
                { "width": "12%" },
                { "width": "10%" },
                { "width": "10%" },
                { "width": "15%" },
                null
            ],
            "columnDefs": [
                { "orderable": false, "targets": 8 }
            ]
            //scrollX: true,
            //scrollY: '40vh',
        });
    });

</script>
}